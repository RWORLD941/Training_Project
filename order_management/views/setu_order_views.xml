<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>

        <record id="setu_order_view_tree" model="ir.ui.view">
            <field name="name">setu.order.tree</field>
            <field name="model">setu.order</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="number"/>
                    <field name="product"/>
                    <field name="price"/>
                    <field name="quantity"/>
<!--                    <field name="bill_total"/>-->
                    <field name="customer_id"/>
                    <field name="salesman_id"/>
                </tree>
            </field>
        </record>

        <record id="setu_order_view_form" model="ir.ui.view">
            <field name="name">setu.order.form</field>
            <field name="model">setu.order</field>
            <field name="arch" type="xml">
                <form>
<!--                    <header>-->
<!--                        <button name="button_bill_total" string="Total Bill" class="oe_highlight" type="object"/>-->
<!--                    </header>-->
                    <sheet>
                        <group>
                            <group>
                                <field name="number"/>
                                <field name="product"/>
                                <field name="price"/>
                                <field name="quantity"/>
<!--                                <field name="bill_total"/>-->
                            </group>
                            <group>
                                <field name="customer_id"/>
                                <field name="bill_total"/>
<!--                                <button name="button_bill_total" string="Total Bill" class="oe_highlight" type="object"/>-->
                            </group>
                            <notebook>
                                <page string="Salesman">
                                    <group>
                                        <field name="salesman_id"/>
                                    </group>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
                </form>
            </field>
        </record>


        <record id="action_setu_order" model="ir.actions.act_window">
            <field name="name">Order</field>
            <field name="res_model">setu.order</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem
                id="setu_order"
                name="Order"
                parent="sub_root_1"
                action="action_setu_order"
                sequence="1"
        />

    </data>
</odoo>